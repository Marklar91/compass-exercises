<% if @song && @song.errors.any? %>
	<div>
		<strong>Some issues with your song, please fix:</strong>
		<ul>
			<% @song.errors.full_songs.each do |song| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<form method="post" action="/songs">
	<div>
		<label>Artist:</label>
		<input type="text" name="artist">
	</div>
	<div>
		<label>Song:</label>
		<input type="text" name="song">
	</div>
	<div>
		<label>Url:</label>
		<input type="text" name="url">
	</div>
	<div>
		<input type="submit" value="Submit">
	</div>
</form>